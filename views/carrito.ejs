            </div>
            <div class="cajita negra">
                <p>sushi roll 1</p>
                <div class="derecha"></div>
                <p>- 1 +</p>
                <p>$800</p>
            </div>
            <div class="cajita negra">
                <p>sushi roll 2</p>
                <div class="derecha"></div>
                <p>- 2 +</p>
                <p>$950</p>
            </div>
            <div class="cajita blanca">
                <p>Subtotal</p>
                <div class="derecha"></div>
                <p>$1500</p>
            </div>
            <div class="cajita blanca">
                <p>Total</p>
                <div class="derecha"></div>
                <p>$1900</p>
            </div>
        </div>




    </main>
    <%- include('./partials/footer') %> 
