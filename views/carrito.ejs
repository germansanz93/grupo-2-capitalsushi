<body>
    <%- include('./partials/header') %> 
    <main>
        <div class="container">
            <h3>DETALLE DEL PEDIDO</h3>
            <div class="cajita blanca">
                <p>Producto</p>
                <div class="derecha"></div>
                <p>Cantidad</p>
