<header>
  <img class="logo" src="/images/index.jpeg" alt="">
  <div class="header-container">
    <div class="top-header">
      <div class="header-titles">
        <h1>Capital Sushi</h1>
        <h3>Sushi bar</h3>
      </div>
      <div class="user-menu">
        <% if (locals.user) { %>
          <span class="username">
            <%= user.name %>
          </span>
          <% } %>
            <a class="header-user" href="#" onclick="UserScript()"> <i class="fas fa-user"></i></a>
      </div>
      <a class="header-user" href="#" id="hamburger" onclick="HamburgerScript()"> <i class="fas fa-bars"></i> </a>
    </div>
    <nav>
      <ul>
        <li><a class=<%=view=='home' && 'active' %> href="/">Inicio</a></li>
        <li><a class=<%=view=='menu' && 'active' %> href="/menu">Menu</a></li>
        <li><a class=<%=view=='carrito' && 'active' %> href="/carrito">Carrito</a></li>
        <li><a class=<%=view=='mi_cuenta' && 'active' %> href="/usuario/ingresar">Mi cuenta</a></li>
        <li><a class=<%=view=='contacto' && 'active' %> href="/contacto">Contacto</a></li>
        <% if (locals.user) { %>
          <li><a href="/usuario/salir">Salir</a></li>
        <% } %>
      </ul>
    </nav>
  </div>
</header>